<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="#33FFFFFF" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="NUEVA PARTIDA"
            android:textColor="@color/brand_green"
            android:textSize="18sp"
            android:fontFamily="@font/lato_black"
            android:letterSpacing="0.1"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Deck Configuration -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="ESTILO DE MAZO"
            android:textColor="#99FFFFFF"
            android:textSize="11sp"
            android:letterSpacing="0.05"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp">

            <LinearLayout
                android:id="@+id/cardDeck52"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:background="@drawable/bg_card_selected"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:id="@+id/tvDeck52Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIMPLE"
                    android:textColor="@color/brand_green"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="52 Cartas"
                    android:textColor="#99FFFFFF"
                    android:textSize="11sp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardDeck104"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_card_unselected"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:id="@+id/tvDeck104Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOBLE"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="104 Cartas"
                    android:textColor="#99FFFFFF"
                    android:textSize="11sp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Mode Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="MODO DE JUEGO"
            android:textColor="#99FFFFFF"
            android:textSize="11sp"
            android:letterSpacing="0.05"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp">

            <!-- Practice Mode -->
            <LinearLayout
                android:id="@+id/cardSoloBot"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:background="@drawable/bg_card_unselected"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_robot_face"
                    app:tint="#CCCCCC"
                    android:layout_marginEnd="8dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PrÃ¡ctica"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="vs Bot"
                        android:textColor="#99FFFFFF"
                        android:textSize="10sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- PvP Mode -->
            <LinearLayout
                android:id="@+id/cardSoloAmigo"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_card_selected"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_users_group"
                    app:tint="@color/brand_green"
                    android:layout_marginEnd="8dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 vs 1"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amigo"
                        android:textColor="#99FFFFFF"
                        android:textSize="10sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Start Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartGame"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="JUGAR AHORA"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:textColor="#000000"
            app:backgroundTint="@color/brand_green"
            app:cornerRadius="28dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
