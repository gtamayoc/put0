<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/poker_table_background"
    android:fitsSystemWindows="true">

    <!-- Vignette Effect -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/vignette_gradient"
        android:alpha="0.8" />

    <!-- GUIDELINES FOR LANDSCAPE STRUCTURE -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7908892" />

    <!-- LEFT SECTION: Decks & Compact Opponents -->
    <LinearLayout
        android:id="@+id/decksSidebar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal|bottom"
        android:paddingVertical="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guide_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- COMPACT OPPONENTS CLUSTER (Dynamic & Interactive) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPPONENTS"
            android:textColor="#66FFFFFF"
            android:textSize="8sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="4dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/opponentsCluster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingEnd="12dp">

            <!-- OPPONENT 1 (Always expected to be present if game starts) -->
            <!-- Using ID 'opponent1' so Java logic controls this container's visibility -->
            <LinearLayout
                android:id="@+id/opponent1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivOpponent1"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/base"
                        app:civ_border_color="@color/md_primary"
                        app:civ_border_width="2dp" />

                    <!-- Card Count Badge -->
                    <TextView
                        android:id="@+id/tvOpponentCards1"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/bg_badge_dark"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:elevation="4dp"/>
                </FrameLayout>
                <!-- Name hidden as per request, but View exists for Java binding -->
                <TextView android:id="@+id/tvOpponentName1" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
            </LinearLayout>

            <!-- OPPONENT 2 -->
            <LinearLayout
                android:id="@+id/opponent2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivOpponent2"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/base"
                        app:civ_border_color="#AAFFFFFF"
                        app:civ_border_width="1dp" 
                        android:alpha="0.9"/>
                    
                    <TextView
                        android:id="@+id/tvOpponentStatus2"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/bg_badge_dark"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@android:color/white"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:elevation="4dp"/>
                </FrameLayout>
                 <!-- Name hidden -->
                <TextView android:id="@+id/tvOpponentName2" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
            </LinearLayout>

            <!-- OPPONENT 3 -->
            <LinearLayout
                android:id="@+id/opponent3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivOpponent3"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/base"
                        app:civ_border_color="#88FFFFFF"
                        app:civ_border_width="1dp" 
                        android:alpha="0.8"/>
                    
                    <TextView
                        android:id="@+id/tvOpponentCards3"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/bg_badge_dark"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:elevation="4dp"/>
                </FrameLayout>
                 <!-- Name hidden -->
                <TextView android:id="@+id/tvOpponentName3" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- Main Deck -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAIN DECK"
            android:textColor="#66FFFFFF"
            android:textSize="8sp"
            android:textStyle="bold"
            android:letterSpacing="0.2" />

        <TextView
            android:id="@+id/tvDeckType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOUBLE (104)"
            android:textColor="@color/md_primary"
            android:textSize="7sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:alpha="0.8" />
        
        <FrameLayout
            android:layout_width="54dp"
            android:layout_height="64dp"
            android:layout_marginTop="3dp">
            <!-- Simulated Stack Effect -->
            <View
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:background="@drawable/base" />
            <View
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:background="@drawable/base" />
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:padding="2dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/base"
                    android:scaleType="centerInside" />
                <TextView
                    android:id="@+id/tvInitialDeck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_badge_dark"
                    android:gravity="center"
                    android:minWidth="22dp"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="2dp"
                    android:text="48"
                    android:textColor="@android:color/white"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:elevation="6dp" />
            </FrameLayout>
        </FrameLayout>

        <!-- Discard Pile -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="DISCARD"
            android:textColor="#66FFFFFF"
            android:textSize="8sp"
            android:textStyle="bold"
            android:letterSpacing="0.2" />

        <FrameLayout
            android:id="@+id/discardPileContainer"
            android:layout_width="50dp"
            android:layout_height="70dp">
            <!-- Mock discard pile with rotation -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/base"
                android:rotation="-12"
                android:alpha="0.5"
                android:translationX="-5dp" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/base"
                android:rotation="8"
                android:alpha="0.7"
                android:translationX="3dp" />
            
            <TextView
                android:id="@+id/tvDiscardCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_badge_dark"
                android:gravity="center"
                android:minWidth="24dp"
                android:paddingHorizontal="4dp"
                android:paddingVertical="2dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textSize="12sp"
                android:textStyle="bold"
                android:elevation="10dp" />
        </FrameLayout>
    </LinearLayout>

    <!-- RIGHT SECTION: Controls & Status -->
    <LinearLayout
        android:id="@+id/controlsSidebar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        app:layout_constraintStart_toEndOf="@+id/guide_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Match Status Panel -->
        <LinearLayout
            android:id="@+id/panelGameStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="#CC1C1B1F"
            android:padding="12dp"
            android:orientation="vertical"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ESTADO DE JUEGO"
                android:textColor="@color/md_primary"
                android:textSize="9sp"
                android:letterSpacing="0.1"
                android:textStyle="bold" 
                android:gravity="center"/>

            <!-- Phase Tracker -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <View android:id="@+id/phaseDot1" android:layout_width="8dp" android:layout_height="8dp" android:background="@drawable/card_count_background" android:backgroundTint="#4CAF50" android:layout_marginEnd="4dp"/>
                <View android:id="@+id/phaseDot2" android:layout_width="8dp" android:layout_height="8dp" android:background="@drawable/card_count_background" android:backgroundTint="#33FFFFFF" android:layout_marginEnd="4dp"/>
                <View android:id="@+id/phaseDot3" android:layout_width="8dp" android:layout_height="8dp" android:background="@drawable/card_count_background" android:backgroundTint="#33FFFFFF" android:layout_marginEnd="4dp"/>
                <View android:id="@+id/phaseDot4" android:layout_width="8dp" android:layout_height="8dp" android:background="@drawable/card_count_background" android:backgroundTint="#33FFFFFF" />
                <TextView
                    android:id="@+id/tvGameState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="F1: Robando"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="#33FFFFFF" />

            <!-- Table Context -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_play_modern"
                    app:tint="#99FFFFFF" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="OBJETIVO MESA"
                    android:textColor="#99FFFFFF"
                    android:textSize="8sp" />
            </LinearLayout>
            
            <TextView
                android:id="@+id/tvTableTarget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Cualquier carta"
                android:textColor="#E6E1E5"
                android:textSize="10sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_history"
                    app:tint="#99FFFFFF" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="RECIENTE"
                    android:textColor="#99FFFFFF"
                    android:textSize="8sp" />
            </LinearLayout>
            
            <TextView
                android:id="@+id/tvLastAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Iniciando..."
                android:textColor="#E6E1E5"
                android:textSize="9sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="#33FFFFFF" />

            <!-- Match Timer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TIEMPO"
                    android:textColor="#99FFFFFF"
                    android:textSize="8sp" />
                <Chronometer
                    android:id="@+id/gameTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Buttons Panel -->
        <LinearLayout
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="#33000000"
            android:padding="12dp"
            android:orientation="vertical">
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlaySelected"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="JUGAR"
                android:textSize="10sp"
                android:textStyle="bold"
                app:cornerRadius="18dp"
                app:backgroundTint="#4CAF50"
                app:icon="@drawable/ic_play_modern"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                android:textColor="@android:color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSkipTurn"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="6dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="PASAR"
                android:textSize="10sp"
                android:textStyle="bold"
                app:cornerRadius="18dp"
                app:backgroundTint="#FF9800"
                app:icon="@drawable/ic_skip_modern"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

    <!-- CENTER SECTION: Play Area -->
    <FrameLayout
        android:id="@+id/playArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/guide_start"
        app:layout_constraintEnd_toStartOf="@+id/guide_end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/playerHandSection">

        <!-- Spotlight Effect -->
        <View
            android:layout_width="375dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:background="@drawable/vignette_gradient"
            android:alpha="0.2"
            android:scaleX="1.6"
            android:scaleY="1.6" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tableCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clipToPadding="false"
            tools:layout_width="200dp"
            tools:layout_height="80dp"
            tools:listitem="@layout/item_card" />

        <!-- Turn Indicator -->
        <TextView
            android:id="@+id/tvTurnIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="#CC1C1B1F"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp"
            android:text="Turn: DeepBot"
            android:textColor="@android:color/white"
            android:textSize="10sp" />
    </FrameLayout>

    <!-- BOTTOM SECTION: Player Hand Area - FIXED CHAIN PACKED -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/playerHandSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end">

        <!-- Hidden Cards Pile (Left of Hand) -->
        <LinearLayout
            android:id="@+id/containerHiddenCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rvPlayerHand"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintBottom_toBottomOf="parent">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIDDEN"
                android:textSize="8sp"
                android:textColor="#88FFFFFF"
                android:layout_marginBottom="4dp"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivHidden1"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/base"
                    android:visibility="invisible"
                    android:rotation="-5"/>
                <ImageView
                    android:id="@+id/ivHidden2"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/base"
                    android:visibility="invisible"
                    android:rotation="2"/>
                <ImageView
                    android:id="@+id/ivHidden3"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/base"
                    android:visibility="invisible"
                    android:rotation="8"/>
            </FrameLayout>
        </LinearLayout>

        <!-- Main Hand (CENTERED & COMPACT - 5 CARDS MAX VISUAL WIDTH) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPlayerHand"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:clipToPadding="false"
            app:layout_constrainedWidth="true"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintWidth_max="300dp"
            app:layout_constraintStart_toEndOf="@+id/containerHiddenCards"
            app:layout_constraintEnd_toStartOf="@+id/containerVisibleCards"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_width="300dp"
            tools:listitem="@layout/item_card" />

        <!-- Visible Cards Pile (Right of Hand) -->
        <LinearLayout
            android:id="@+id/containerVisibleCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/rvPlayerHand"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VISIBLE"
                android:textSize="8sp"
                android:textColor="#88FFFFFF"
                android:layout_marginBottom="4dp"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivVisible1"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/base"
                    android:visibility="invisible"
                    android:rotation="-8"/>
                <ImageView
                    android:id="@+id/ivVisible2"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/base"
                    android:visibility="invisible"
                    android:rotation="3"/>
                <ImageView
                    android:id="@+id/ivVisible3"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/base"
                    android:visibility="invisible"
                    android:rotation="10"/>
            </FrameLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- BOTTOM LEFT: Player Info Card (Fixed position Overlay) -->
    <LinearLayout
        android:id="@+id/player_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="#CC1C1B1F"
        android:padding="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Clickable Profile Area (Trigger for Settings) -->
        <LinearLayout
            android:id="@+id/layoutProfileTrigger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/base"
                app:civ_border_color="@color/md_primary"
                app:civ_border_width="1dp" />
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JUGADOR"
                    android:textColor="#99CAC4D0"
                    android:textSize="7sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05" />
                <TextView
                    android:id="@+id/tvPlayerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alex Gonzalez"
