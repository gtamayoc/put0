<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/poker_table_background"
    android:fitsSystemWindows="true">

    <!-- Vignette Effect -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/vignette_gradient"
        android:alpha="0.8" />

    <!-- TOP SECTION: Opponents -->
    <LinearLayout
        android:id="@+id/opponentsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Opponent 1 -->
        <LinearLayout
            android:id="@+id/opponent1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:alpha="0.7">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivOpponent1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/base"
                    app:civ_border_color="@android:color/white"
                    app:civ_border_width="1dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/card_count_background"
                    android:paddingHorizontal="4dp"
                    android:text="PH 1"
                    android:textColor="@android:color/white"
                    android:textSize="8sp"
                    android:textStyle="bold" />
            </FrameLayout>
            <TextView
                android:id="@+id/tvOpponentName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alpha-One"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:layout_marginTop="4dp" />
            <TextView
                android:id="@+id/tvOpponentCards1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 cards"
                android:textColor="#99FFFFFF"
                android:textSize="8sp" />
        </LinearLayout>

        <!-- Current Opponent (Highlighted) -->
        <LinearLayout
            android:id="@+id/opponent2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivOpponent2"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/base"
                    app:civ_border_color="@color/md_primary"
                    app:civ_border_width="3dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/card_count_background"
                    android:paddingHorizontal="4dp"
                    android:text="PH 2"
                    android:textColor="@android:color/white"
                    android:textSize="8sp"
                    android:textStyle="bold" />
            </FrameLayout>
            <TextView
                android:id="@+id/tvOpponentName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DeepBot"
                android:textColor="@color/md_primary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />
            <TextView
                android:id="@+id/tvOpponentStatus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thinking..."
                android:textColor="@color/md_primary"
                android:textSize="8sp" />
        </LinearLayout>

        <!-- Opponent 3 -->
        <LinearLayout
            android:id="@+id/opponent3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:alpha="0.7">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivOpponent3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/base"
                    app:civ_border_color="@android:color/white"
                    app:civ_border_width="1dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/card_count_background"
                    android:paddingHorizontal="4dp"
                    android:text="PH 3"
                    android:textColor="@android:color/white"
                    android:textSize="8sp"
                    android:textStyle="bold" />
            </FrameLayout>
            <TextView
                android:id="@+id/tvOpponentName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nexus-X"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:layout_marginTop="4dp" />
            <TextView
                android:id="@+id/tvOpponentCards3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 cards"
                android:textColor="#99FFFFFF"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- LEFT SECTION: Decks -->
    <LinearLayout
        android:id="@+id/decksSidebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Main Deck -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAIN DECK"
            android:textColor="#66FFFFFF"
            android:textSize="8sp"
            android:textStyle="bold"
            android:letterSpacing="0.2" />
        
        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/card_background_gradient"
            android:padding="2dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1A237E" /> <!-- Mock Navy background -->
            <TextView
                android:id="@+id/tvInitialDeck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="48"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Discard Pile -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="DISCARD"
            android:textColor="#66FFFFFF"
            android:textSize="8sp"
            android:textStyle="bold"
            android:letterSpacing="0.2" />

        <FrameLayout
            android:id="@+id/discardPileContainer"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp">
            <!-- Mock discard pile with rotation -->
            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/base"
                android:rotation="-12"
                android:translationX="-5dp" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/base"
                android:rotation="8"
                android:translationX="3dp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/descartedCards"
                android:layout_width="55dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:rotation="3"
                tools:listitem="@layout/item_card" />
        </FrameLayout>
    </LinearLayout>

    <!-- CENTER SECTION: Play Area -->
    <FrameLayout
        android:id="@+id/playArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/opponentsContainer"
        app:layout_constraintBottom_toTopOf="@+id/playerHandSection"
        app:layout_constraintStart_toEndOf="@id/decksSidebar"
        app:layout_constraintEnd_toStartOf="@+id/controlsSidebar">

        <!-- Spotlight Effect -->
        <View
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/vignette_gradient"
            android:alpha="0.2"
            android:scaleX="1.5"
            android:scaleY="1.5" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tableCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clipToPadding="false"
            tools:layout_width="200dp"
            tools:layout_height="120dp"
            tools:listitem="@layout/item_card" />
        
        <!-- Turn Indicator -->
        <TextView
            android:id="@+id/tvTurnIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="40dp"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="#CC1C1B1F"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp"
            android:text="Turn: DeepBot"
            android:textColor="@android:color/white"
            android:textSize="10sp" />
    </FrameLayout>

    <!-- RIGHT SECTION: Controls & Status -->
    <LinearLayout
        android:id="@+id/controlsSidebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Buttons Panel -->
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="#33000000"
            android:padding="12dp"
            android:orientation="vertical">
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlaySelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JUGAR"
                android:textSize="10sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/md_primary"
                app:icon="@drawable/base"
                android:textColor="@color/md_on_primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSkipTurn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="PASAR"
                android:textSize="10sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/md_secondary_container"
                app:icon="@drawable/base"
                android:textColor="@color/md_on_secondary_container" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSortHand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="ORDENAR"
                android:textSize="10sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/md_tertiary_container"
                app:icon="@drawable/base"
                android:textColor="@color/md_on_tertiary_container" />
        </LinearLayout>

        <!-- Match Phase Panel -->
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="@color/md_surface"
            android:padding="12dp"
            android:orientation="vertical">
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Match Phase"
                    android:textColor="#E6E1E5"
                    android:textSize="10sp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/holo_green_light" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Status"
                    android:textColor="#CAC4D0"
                    android:textSize="8sp" />
                <TextView
                    android:id="@+id/tvGameState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_count_background"
                    android:paddingHorizontal="4dp"
                    android:text="Phase 2"
                    android:textColor="@color/md_on_secondary_container"
                    android:textSize="8sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Time"
                    android:textColor="#CAC4D0"
                    android:textSize="8sp" />
                <Chronometer
                    android:id="@+id/gameTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- BOTTOM SECTION: Player Hand -->
    <LinearLayout
        android:id="@+id/playerHandSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Hidden & Visible Cards -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPlayerHidden"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:alpha="0.6"
                tools:layout_width="100dp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPlayerVisible"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:alpha="0.8"
                tools:layout_width="100dp" />
        </LinearLayout>

        <!-- Main Hand -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPlayerHand"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:clipToPadding="false"
            tools:layout_width="300dp"
            tools:listitem="@layout/item_card" />

    </LinearLayout>

    <!-- BOTTOM LEFT: Player Info Card -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="#CC1C1B1F"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/base"
            app:civ_border_color="@color/md_primary"
            app:civ_border_width="1dp" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLAYER ONE"
                android:textColor="#CAC4D0"
                android:textSize="8sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alex Gonzalez"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="16dp"
            android:background="#33FFFFFF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCORE"
                android:textColor="#CAC4D0"
                android:textSize="8sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvPlayerScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2,450"
                android:textColor="@color/md_primary"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- TOP RIGHT: Settings/History -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettings"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:backgroundTint="#33000000"
            app:icon="@drawable/base" /> <!-- Replace with settings icon later -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistory"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#33000000"
            app:icon="@drawable/base" />
    </LinearLayout>

    <!-- Overlay Lottie Animation -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        android:scaleType="centerInside"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>