<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/playerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Jugador 1"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/playerStatusIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/playerStatusIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/base"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/playerName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/playerName" />

        <!-- Ronda 1 Container -->
        <LinearLayout
            android:id="@+id/ronda1Container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintEnd_toStartOf="@+id/ronda2Container"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playerName">

            <TextView
                android:id="@+id/ronda_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ronda 1"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/hiddenCardsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="-15dp"
                    android:rotation="-15"
                    android:src="@drawable/base" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="-15dp"
                    android:src="@drawable/base" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:rotation="15"
                    android:src="@drawable/base" />
            </LinearLayout>
        </LinearLayout>

        <!-- Ronda 2 Container -->
        <LinearLayout
            android:id="@+id/ronda2Container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ronda1Container"
            app:layout_constraintTop_toBottomOf="@+id/playerName">

            <TextView
                android:id="@+id/ronda_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ronda 2"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/visibleCardsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="-15dp"
                    android:rotation="-15"
                    android:src="@drawable/base" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="-15dp"
                    android:src="@drawable/base" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:rotation="15"
                    android:src="@drawable/base" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/cartas_mano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Cartas en mano"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ronda1Container" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/opponentCards"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:clipToPadding="false"
            android:paddingHorizontal="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cartas_mano"
            tools:listitem="@layout/item_card" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
