<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".core.view.LegalAcceptanceActivity">

    <!-- Overly for better legibility -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Main Legal Card (Glassmorphism effect) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLegal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="#CC1C1B1F"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.3"
                app:strokeColor="#33FFFFFF"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <ImageView
                        android:id="@+id/ivLegalIcon"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_check_circle"
                        app:tint="@color/md_primary" />

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="@string/legal_onboarding_title"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:alpha="0.7"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp"
                        android:text="@string/legal_onboarding_desc"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:background="#22FFFFFF" />

                    <!-- Terms Item -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_mode_card"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <CheckBox
                            android:id="@+id/cbTerms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:buttonTint="@color/md_primary" />

                        <TextView
                            android:id="@+id/tvTermsLink"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="@string/accept_terms"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:alpha="0.5"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="@color/white" />
                    </LinearLayout>

                    <!-- Privacy Item -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_mode_card"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <CheckBox
                            android:id="@+id/cbPrivacy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:buttonTint="@color/md_primary" />

                        <TextView
                            android:id="@+id/tvPrivacyLink"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="@string/accept_privacy"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:alpha="0.5"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="@color/white" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnContinue"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="32dp"
                        android:enabled="false"
                        android:text="@string/btn_continue"
                        android:textAllCaps="true"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textStyle="bold"
                        app:cornerRadius="16dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
